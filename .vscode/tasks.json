{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/I${workspaceFolder}\\as_heap_c",
				"/I${workspaceFolder}\\..\\munit-master",
				"/I${workspaceFolder}\\c_test\\include",
				"/EHsc",
				"/nologo",
				"/Fo${workspaceFolder}\\c_test\\bin\\",
				"/Fd${workspaceFolder}\\c_test\\bin\\",
				"/Fe:",
				"${workspaceFolder}\\c_test\\bin\\c_test.exe",
				//TODO: add src/include folder to as_heap_C
				"${workspaceFolder}\\c_test\\src\\*.c",  "${workspaceFolder}\\..\\munit-master\\munit.c", "${workspaceFolder}\\as_heap_c\\*.c"
			],
			"options": {
				"cwd": "${workspaceFolder}\\c_test\\bin"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
} 